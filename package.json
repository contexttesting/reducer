{
  "name": "@zoroaster/reducer",
  "version": "1.1.0",
  "description": "The test suite reducer to run each test and see whether it passes or fails; and the runner which adds time-outs and evaluates contexts.",
  "main": "build",
  "scripts": {
    "t": "zoroaster -a",
    "test": "yarn t test/spec test/mask",
    "spec": "yarn t test/spec",
    "mask": "yarn t test/mask",
    "test-build": "ALAMODE_ENV=test-build yarn test",
    "lint": "eslint .",
    "doc": "NODE_DEBUG=doc doc documentary -o README.md",
    "b": "alamode src -o build -s",
    "d": "yarn-s d1 d2 d3 d5 d6",
    "d1": "NODE_DEBUG=doc doc src/lib/reducer.js -g",
    "d2": "NODE_DEBUG=doc doc src/lib/index.js -g",
    "d3": "NODE_DEBUG=doc doc src/lib/run-test.js -g",
    "d5": "NODE_DEBUG=doc doc test/context/index.js -g",
    "d6": "NODE_DEBUG=doc doc src/index.js -g",
    "build": "yarn-s d b doc",
    "rec": "NODE_DEBUG=appshot appshot -T 23 -a Terminal -y 150 -f",
    "e": "node example",
    "example/": "yarn e example/example.js"
  },
  "files": [
    "build",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/contexttesting/reducer.git"
  },
  "keywords": [
    "reducer",
    "zoroaster"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/contexttesting/reducer/issues"
  },
  "homepage": "https://github.com/contexttesting/reducer#readme",
  "devDependencies": {
    "alamode": "1.8.2",
    "documentary": "1.21.2",
    "eslint-config-artdeco": "1.0.1",
    "yarn-s": "1.1.0",
    "zoroaster": "3.7.2"
  },
  "dependencies": {
    "promto": "1.0.1"
  }
}
